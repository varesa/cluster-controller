<domain type="kvm">
    <name>{{name}}</name>
    <uuid>{{uuid}}</uuid>

    <vcpu placement='static'>{{cpus}}</vcpu>
    <memory>{{memory}}</memory>
    <currentMemory>{{memory}}</currentMemory>

    <os>
        <type arch='x86_64' machine='pc-q35-rhel8.3.0'>hvm</type>
        <boot dev='network'/>
    </os>

    {% include "features.xml" %}

    <devices>
        {% include "misc_devices.xml" %}

        <disk type='network' device='disk'>
            <driver name='qemu' type='raw'/>
            <auth username='libvirt'>
                <secret type='ceph' uuid='8e22b0ac-b429-4ad1-8783-6d792db31349'/>
            </auth>
            <source protocol='rbd' name='volumes/fw2-root' index='2'>
                <host name='10.4.2.31' port='6789'/>
                <host name='10.4.2.32' port='6789'/>
                <host name='10.4.2.33' port='6789'/>
            </source>
            <target dev='vda' bus='virtio'/>
            <boot order='1'/>
            <alias name='virtio-disk0'/>
            <address type='pci' domain='0x0000' bus='0x04' slot='0x00' function='0x0'/>
        </disk>

        <disk type='file' device='cdrom'>
            <driver name='qemu'/>
            <target dev='sda' bus='sata'/>
            <readonly/>
            <alias name='sata0-0-0'/>
            <address type='drive' controller='0' bus='0' target='0' unit='0'/>
        </disk>

        <interface type='bridge'>
            <mac address='52:54:00:44:ae:05'/>
            <source network='br-ex' portgroup='vlan-50-internet' portid='df4d127a-0caf-41de-aca3-a8a5e0451a00' bridge='br-ex'/>
            <vlan>
                <tag id='50'/>
            </vlan>
            <virtualport type='openvswitch'>
                <parameters interfaceid='9a312c08-f07e-4aa4-bb15-c90d210f9b90'/>
            </virtualport>
            <target dev='vnet0'/>
            <model type='virtio'/>
            <alias name='net0'/>
            <address type='pci' domain='0x0000' bus='0x01' slot='0x00' function='0x0'/>
        </interface>
        <interface type='bridge'>
            <mac address='52:54:00:03:0b:62'/>
            <source network='br-ex' portgroup='vlan-2100-mgt' portid='997f0ca4-fae5-41b9-ad57-a54abc6a4bfe' bridge='br-ex'/>
            <vlan>
                <tag id='2100'/>
            </vlan>
            <virtualport type='openvswitch'>
                <parameters interfaceid='f3a9b141-1b28-496f-8dd2-2b2d0763b7d8'/>
            </virtualport>
            <target dev='vnet1'/>
            <model type='virtio'/>
            <alias name='net1'/>
            <address type='pci' domain='0x0000' bus='0x07' slot='0x00' function='0x0'/>
        </interface>
    </devices>
</domain>